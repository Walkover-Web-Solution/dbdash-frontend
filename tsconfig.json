{
    "compilerOptions": {
        "outDir": "./dist/",        
        "sourceMap": true,          
        "strictNullChecks": true,  
        "target": "es6", 
        "module": "commonjs",           
        "jsx": "react",                        
        "allowJs": true,
        "moduleResolution": "node",  
        "noResolve": false,
        "removeComments": true,          
    },
    "include": [
        "./src/"
    ],
    "exclude": [
        "./node_modules/**/*"
      ]
}